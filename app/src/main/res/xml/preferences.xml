<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.preference.PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android">
    <SwitchPreference
        android:defaultValue="true"
        android:key="@string/pref_use_vibration_key"
        android:summary="@string/pref_use_vibration_summary"
        android:title="@string/pref_use_vibration_title"/>
    <PreferenceCategory android:title = "@string/pref_tba_title">
        <EditTextPreference
            android:key = "@string/pref_team_number"
            android:title = "@string/pref_set_team" />

        <Preference
            android:key = "@string/pref_event_key"
            android:title = "@string/pref_set_event" />

    </PreferenceCategory>

    <PreferenceCategory android:title="@string/pref_cat_about">
        <Preference
            android:key="@string/pref_about_key"
            android:title="@string/pref_app_name"
            android:icon="@mipmap/ic_launcher"/>
        <Preference
            android:title="@string/pref_github_title"
            android:summary="@string/pref_github_summary">
            <intent
                android:action="android.intent.action.VIEW"
                android:data="https://github.com/Team865/Android-Scouting-App"/>
        </Preference>
        <Preference
            android:key="@string/pref_licenses_key"
            android:title="@string/pref_licenses_title"/>
    </PreferenceCategory>


</android.support.v7.preference.PreferenceScreen>